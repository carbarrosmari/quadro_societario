{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <a href='{{ path('company_create') }}' class='btn btn-primary mb-4 mt-4'>+ Nova Empresa</a>
    <div class="table-responsive-lg">
        <table class="table ">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Razão Social</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Telefone</th>
                <th scope="col">Email</th>
                <th scope="col">Endereço</th>
                </tr>
            </thead>
            <tbody>
                {% for company in companies %}
                    <tr scope="row">
                        <td>{{ company.id }}</td>
                        <td>{{ company.corporateName }}</td>
                        <td>{{ company.cnpj }}</td>
                        <td>{{ company.phone }}</td>
                        <td>{{ company.email }}</td>
                        <td>{{ company.address }}</td>
                        <td><a href='/company/{{ company.id }}/update' class='btn btn-primary'>Gerenciar</a></td>
                        <td><a href='/company/{{ company.id }}/delete' class='btn btn-danger'>Excluir</a></td>
                    </tr>
                {% endfor %}        
            </tbody>
        </table>
    </div>
{% endblock %}